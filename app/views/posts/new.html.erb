<h1>New Article</h1>

<%= form_for :post, url: posts_path do |f| %>

<% if @post.errors.any? %>
  <div id="error_explanation" >
    <h2>
      <%= pluralize(@post.errors.count, 'error') %>
      were found while trying to process your post.
    </h2>
    <ul>
      <%= @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :body %>
  <%= f.text_area :body %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
<%= link_to 'Back', posts_path %>
